<div class="page-header">
    <h2><i class="fas fa-plus"></i> Lisää lukujärjestys</h2>
</div>

<form method="POST" action="/teacher/schedule/add" class="schedule-form">
    <div class="form-row">
        <div class="form-group">
            <label for="date">Päivämäärä</label>
            <input type="date" id="date" name="date" required>
        </div>
        
        <div class="form-group">
            <label for="class_id">Luokka</label>
            <select id="class_id" name="class_id" required>
                <option value="">Valitse luokka</option>
                <% classes.forEach(function(cls) { %>
                <option value="<%= cls.id %>">
                    <%= cls.id %>
                </option>
                <% }); %>
            </select>
        </div>
    </div>
    
    <div class="form-row">
        <div class="form-group">
            <label for="start_time">Aloitusaika</label>
            <input type="time" id="start_time" name="start_time" required>
        </div>
        
        <div class="form-group">
            <label for="end_time">Lopetusaika</label>
            <input type="time" id="end_time" name="end_time" required>
        </div>
    </div>
    
    <div class="form-group">
        <label for="subject">Aine</label>
        <input type="text" id="subject" name="subject" required placeholder="Esim. Matematiikka">
    </div>
    
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i>
            Lisää lukujärjestys
        </button>
        <a href="/teacher/schedules" class="btn btn-outline">
            <i class="fas fa-arrow-left"></i>
            Takaisin
        </a>
    </div>
</form>
