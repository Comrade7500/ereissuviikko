<div class="page-header">
    <h2><i class="fas fa-paper-plane"></i> Lähetä viesti opettajalle</h2>
</div>

<form method="POST" action="/parent/messages/send" class="message-form">
    <div class="form-group">
        <label for="recipient">Vastaanottaja</label>
        <select id="recipient" name="recipient" required>
            <option value="">Valitse opettaja</option>
            <% teachers.forEach(function(teacher) { %>
            <option value="<%= teacher.email %>">
                <%= teacher.name %> (<%= teacher.email %>)
            </option>
            <% }); %>
        </select>
    </div>
    
    <div class="form-group">
        <label for="subject">Aihe</label>
        <input type="text" id="subject" name="subject" required placeholder="Viestin aihe">
    </div>
    
    <div class="form-group">
        <label for="body">Viesti</label>
        <textarea id="body" name="body" required rows="5" placeholder="Kirjoita viestisi tähän..."></textarea>
    </div>
    
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-paper-plane"></i>
            Lähetä viesti
        </button>
        <a href="/parent/messages" class="btn btn-outline">
            <i class="fas fa-arrow-left"></i>
            Takaisin
        </a>
    </div>
</form>
