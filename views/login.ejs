<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <h2><i class="fas fa-graduation-cap"></i> eReissuvihko</h2>
            <p>Alakoulun digitaalinen järjestelmä</p>
        </div>
        
        <form method="POST" action="/login" class="login-form">
            <div class="form-group">
                <label for="email">Sähköpostiosoite</label>
                <input type="email" id="email" name="email" required 
                       placeholder="anna.virtanen@koulu.fi" 
                       value="<%= typeof email !== 'undefined' ? email : '' %>">
            </div>
            
            <button type="submit" class="btn btn-primary btn-full">
                <i class="fas fa-sign-in-alt"></i>
                Kirjaudu sisään
            </button>
        </form>
        
        <div class="login-info">
            <h3>Testikäyttäjät:</h3>
            <div class="test-users">
                <div class="test-user">
                    <strong>Opettaja:</strong> anna.virtanen@koulu.fi
                </div>
                <div class="test-user">
                    <strong>Oppilas:</strong> ella.virtanen@example.com
                </div>
                <div class="test-user">
                    <strong>Huoltaja:</strong> marja.virtanen@example.com
                </div>
            </div>
        </div>
    </div>
</div>

